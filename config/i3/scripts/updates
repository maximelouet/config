#!/bin/sh

# Saumon i3blocks scripts : updates (display number of pending Arch updates)

number=$(checkupdates | wc -l)

if [ $number -gt 5 ]; then
  spanarg=" color=\"fa8026\""
elif [ $number -gt 0 ]; then
  spanarg=" color=\"19ef5d\""
else
  spanarg=""
fi

echo -n "<span$spanargs>ï€¡  $number</span>"
