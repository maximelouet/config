  cmm = commit -m
  d = diff
  logs = log --show-signature
  pa = pull --all
  pouche = push
  poule = pull
  poulet = pull
  p = pull
  re = !git fetch && git rebase origin/master
  r = restore
  sd = diff --staged
  set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
  s = switch
  st = status
  tree = log --graph --full-history --all --pretty=format:"%h%x09%d%x20%s"
