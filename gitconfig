[user]
	name = Maxime Louet
	email = maxime@saumon.io
[core]
	editor = vim
	autocrlf = input
[alias]
	ass = add
	cm = commit --verbose
	cmm = commit --verbose -m
	st = status
	p = pull
	pouche = push
	poule = pull
	poulet = pull
	pa = pull --all
	c = checkout
	amend = commit --amend
	tree = log --graph --full-history --all --pretty=format:"%h%x09%d%x20%s"
	abort = rebase --abort
	continue = rebase --continue
	re = !git fetch && git rebase origin/master
	set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
	yolo = '!git log --no-merges --oneline | awk -F' ' '{print $1}' | sort -R | head -n1 | xargs git revert'
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
