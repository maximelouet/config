# vim: set et ts=4 sts=4 sw=4:

# Saumon i3 config file - https://github.com/maximelouet/config/blob/master/.i3/config


# ALIASES
set $mod Mod1
set $alt Mod1
set $super Mod4
set $ws1 " 1 "
set $ws2 " 2 "
set $ws3 " 3 "
set $ws4 " 4 "
set $ws5 " 5 "
set $ws6 " 6 "
set $ws7 " 7 "
set $ws8 " 8 "
set $ws9 " 9 "
set $ws10 " 10 "
set $terminal "xfce4-terminal"


# FONT
font pango:Noto Sans 11


# CHANGE FOCUS
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


# MOVE ON SCREEN
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# SPLIT MODE
bindsym $mod+h split h
bindsym $mod+v split v


# LAYOUT
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split


# TOGGLE FLOATING
bindsym $mod+Shift+space floating toggle
# mouse+$mod to drag floating windows
floating_modifier $mod
# toggle focus between floating and tiling windows
bindsym $mod+space focus mode_toggle


# FOCUS PARENT/CHILD
bindsym $mod+q focus parent
bindsym $mod+d focus child


# SWITCH TO WORKSPACE
bindcode $mod+10 workspace $ws1
bindcode $mod+11 workspace $ws2
bindcode $mod+12 workspace $ws3
bindcode $mod+13 workspace $ws4
bindcode $mod+14 workspace $ws5
bindcode $mod+15 workspace $ws6
bindcode $mod+16 workspace $ws7
bindcode $mod+17 workspace $ws8
bindcode $mod+18 workspace $ws9
bindcode $mod+19 workspace $ws10


# MOVE TO WORKSPACE
bindcode $mod+Shift+10 move container to workspace $ws1
bindcode $mod+Shift+11 move container to workspace $ws2
bindcode $mod+Shift+12 move container to workspace $ws3
bindcode $mod+Shift+13 move container to workspace $ws4
bindcode $mod+Shift+14 move container to workspace $ws5
bindcode $mod+Shift+15 move container to workspace $ws6
bindcode $mod+Shift+16 move container to workspace $ws7
bindcode $mod+Shift+17 move container to workspace $ws8
bindcode $mod+Shift+18 move container to workspace $ws9
bindcode $mod+Shift+19 move container to workspace $ws10


# Reload the configuration file
# bindsym $mod+Shift+c reload


# RESTART i3
bindsym $mod+Shift+r restart


# EXIT i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


# RESIZE MODE

bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# BAR

bar {
    status_command i3blocks -c ~/.i3/blocks
    position bottom
    font pango:Noto Sans, Icons 10.5

    colors {
        background #1c3542
        statusline #cccccc

#       <colorclass> <border> <background> <text>
        focused_workspace  #12846e #12846e #ffffff
        active_workspace   #12846e #12846e #ffffff
        inactive_workspace #22445a #22445a #999999
        urgent_workspace   #902020 #902020 #ffffff
        binding_mode       #902020 #902020 #ffffff
    }

}


# DESIGN

# class                 border  backgr. text    indicator child_border
client.focused          #199c95 #199c95 #ffffff #00DA8E
client.focused_inactive #333333 #5F676A #ffffff #484e50
client.unfocused        #333333 #424242 #8f8f8f #292d2e
client.urgent           #902020 #902020 #ffffff #900000

for_window [class=".*"] title_format " %title"
hide_edge_borders both

for_window [class="(?i)galculator"] floating enable
for_window [window_role="(?i)pop-up"] floating enable
for_window [window_role="(?i)about"] floating enable
for_window [title="Network Operations Manager"] floating enable

for_window [class="Firefox"] border pixel 1


# SHORTCUTS: misc

bindsym $mod+Shift+A kill
bindsym $super+l exec /data/Scripts/lock.sh
bindsym $mod+f fullscreen toggle
bindsym F11 fullscreen toggle

bindsym XF86MonBrightnessUp exec --no-startup-id "light -A 5 && pkill -RTMIN+11 i3blocks"
bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 5 && pkill -RTMIN+11 i3blocks"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -D pulse sset Master '2%+' && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -D pulse sset Master '2%-' && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "amixer -D pulse set Master toggle && pkill -RTMIN+10 i3blocks"
bindsym XF86TouchpadToggle exec --no-startup-id "/data/Scripts/toggletouchpad.sh"
bindsym Print exec --no-startup-id /data/Scripts/screenshot.sh


# SHORTCUTS: programs

bindsym $super+e exec thunar
bindsym $super+KP_Enter exec galculator
bindsym $super+w exec --no-startup-id dmenu_run -nb '#1c3542' -nf '#dddddd' -sb '#12846e' -fn 'Noto Sans-11'
bindsym $super+f exec firefox
bindsym $super+s exec subl3

bindsym $mod+Return exec $terminal
bindsym $super+c exec clipster -s



# STARTUP

exec --no-startup-id i3-msg 'workspace $workspace1; append_layout /home/saumon/.i3/startuplayout.json'
exec firefox
exec $terminal

exec --no-startup-id feh --bg-fill /home/saumon/static/wallpaper/straight.jpeg
exec --no-startup-id xset r rate 185 26
exec --no-startup-id dunst
exec --no-startup-id clipster -d
exec --no-startup-id redshift -l 48.8086:2.2701
